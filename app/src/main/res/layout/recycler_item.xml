<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:contentPadding="4dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFB796CC">
        
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동물병원명"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_addr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지번주소"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_below="@id/tv_name"
            android:textColor="#FFDAF8F8"/>
        <TextView
            android:id="@+id/tv_addr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도로명주소"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_below="@id/tv_addr1"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="번호"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_below="@id/tv_addr2"
            android:textColor="#FFDAF8F8"/>
        <TextView
            android:id="@+id/tv_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영업상태"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_below="@id/tv_tel"
            android:textColor="@color/white"/>

        <ToggleButton
            android:id="@+id/tb_favor"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/icon_favorite_selector"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_tel"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:textOff=" "
            android:textOn=" " />
    </RelativeLayout>



</androidx.cardview.widget.CardView>